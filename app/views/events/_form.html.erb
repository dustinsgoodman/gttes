<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <%= f.label "Event Name" %><%= f.text_field :name %>
    <%= f.label "Start Date & Time" %><%= f.text_field :start_time, :class => "date-field" %>
    <%= f.label "End Date & Time" %><%= f.text_field :end_time, :class => "date-field" %>
    <%= f.label "Event Details" %><%= f.text_field :description %>
    <%= f.label "Facebook Link" %><%= f.text_field :facebook_event %>
    <%= f.label "Eventbrite Link" %><%= f.text_field :eventbrite %>
    <%= f.label "Speaker" %><%= f.text_field :speaker %>
    <%= f.label "Speaker's Twitter Handle" %><%= f.text_field :speaker_twitter_handle %>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% content_for :deferred_js do %>
  <script type="text/javascript">
    $('.date-field').datetimepicker({
      autoclose: true,
      todayBtn: true,
      todayHighlight: true,
      language: 'en',
      pick12HourFormat: true
    });
  </script>
<% end %>